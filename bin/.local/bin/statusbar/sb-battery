#!/bin/sh

# Prints all batteries, their percentage remaining and an emoji corresponding
# to charge status (🔌 for plugged up, 🔋 for discharging on battery, etc.).

STEP=1
brightness_level=$(cat ~/brightness.txt)

function brightness_inc()
{
    LEVEL=$((brightness_level+STEP))

    if [[ $brightness_level -lt 10 ]]; then
        echo $LEVEL > ~/brightness.txt
    fi
}

function brightness_dec()
{
    LEVEL=$((brightness_level-STEP))

    if [[ $brightness_level -gt 1 ]]; then
        echo $LEVEL > ~/brightness.txt
    fi
}

case $BLOCK_BUTTON in
	3) notify-send "🔋 Battery module" "🔋: discharging
🛑: not charging
♻: stagnant charge
🔌: charging
⚡: charged
❗: battery very low!
- Scroll to change adjust xbacklight." $brightness_level;;
    4) brightness_inc && brightness $brightness_level ;;
    5) brightness_dec && brightness $brightness_level ;;
    6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Loop through all attached batteries and format the info
for battery in /sys/class/power_supply/BAT?*; do
	# If non-first battery, print a space separator.
	[ -n "${capacity+x}" ] && printf " "
	# Sets up the status and capacity
	case "$(cat "$battery/status" 2>&1)" in
		"Full") status="⚡" ;;
		"Discharging") status="🔋 " ;;
		"Charging") status="🔌" ;;
		"Not charging") status="🛑 " ;;
		"Unknown") status="💱 " ;;
		*) exit 1 ;;
	esac
	capacity="$(cat "$battery/capacity" 2>&1)"
	# Will make a warn variable if discharging and low
	[ "$status" = "🔋" ] && [ "$capacity" -le 25 ] && warn="❗"
	# Prints the info

	bat_status="$(cat "$battery/status" 2>&1)"

    [ "$capacity" -le 25 ] && [ "$bat_status" == "Discharging" ] && notify-send -t 10000 -u critical "Battery Low!! plug in the charger 🔴 "
    [ "$bat_status" == "Unknown" ] &&  notify-send -u critical "Fully charged!! remove charger ⚠️  "

	printf "%s-%s%s%d%%" "$brightness_level" "$status" "$warn" "$capacity"; unset warn
done && printf "\\n"
