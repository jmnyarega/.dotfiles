#!/bin/sh
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "ğŸ”’lock\nğŸšªleave dwm\nâ™»renew dwm\nğŸ»hibernate\nğŸ’¤sleep\nğŸ”ƒreboot\nğŸ–¥shutdown\nğŸ“ºdisplay off" |
	 dmenu -p 'Action')" in
	'ğŸ”’lock') slock ;;
	'ğŸšªleave dwm') kill -TERM "$(pgrep -u "$USER" "\bdwm$")" ;;
	'â™»renew dwm') kill -HUP "$(pgrep -u "$USER" "\bdwm$")" ;;
	'ğŸ»hibernate') slock $ctl hibernate ;;
	'ğŸ’¤sleep') slock $ctl suspend ;;
	'ğŸ”ƒreboot') reboot ;;
	'ğŸ–¥shutdown') poweroff ;;
	'ğŸ“ºdisplay off') xset dpms force off ;;
	*) exit 1 ;;
esac
